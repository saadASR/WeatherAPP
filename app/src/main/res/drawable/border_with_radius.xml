<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <solid android:color="@color/white"/>

    <!-- Border settings -->
    <stroke
        android:color="@color/white"
        android:width="2dp" />

    <!-- Rounded corners -->
    <corners android:radius="12dp" />

    <!-- Padding inside the border -->
    <padding
        android:left="10dp"
        android:right="10dp"
        android:top="10dp"
        android:bottom="13dp" />
</shape>
